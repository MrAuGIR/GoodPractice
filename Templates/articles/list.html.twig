{% extends "layout.html.twig" %}
    {% block content  %}
        <main>
            <div class="container">
                <div class="row mt-5">
                    <div class="col-12">
                        <h1>Liste des Articles</h1>
                    </div>
                </div>
                <div class="row mt-2 mb-5 pt-2 pb-1">
                    {% if cards is not empty %}
                        {% for card in cards %}
                            {{ card.generateCard() | raw }}
                        {% endfor %}
                    {% else %}
                        <h5>Il n'existe pas d'articles dans cette cat√©gorie {{ categoryActif.getName_Category }}</h5>
                    {% endif %}
                </div>
                <div class="row mt-5">
                    <div class="col-12 col-lg-6">
                        <span>Ajouter un article ?</span>
                    </div>
                    <div class="col-12 col-lg-6">
                        <a href="?controller=article&action=add" class="btn btn-primary">Ajouter</a>
                    </div>
                </div>
            </div>
        </main>
    {% endblock %}