{% extends "layout.html.twig" %}
    {% block content  %}
        <main>
            <div class="container">
                <div class="row mt-5 mb-2"> 
                    <div class="col-12">
                        <h2>{{article.getTitle}}</h2>
                    </div>
                </div>
                <div class="row mb-2"> 
                    <div class="col-12 col-md-6">
                        <p>{{article.getDescription | raw}}</p>
                    </div>
                    <div class="col-12 col-md-6">
                        <img src="{{article.getUrl_img}}" class="card-img-top" alt="illustration">
                    </div>
                </div>
                <div class="row mb-2"> 
                    <div class="col-12 col-md-6">
                        <a href="?controller=article&action=index">Retour accueil</a>
                    </div>
                    
                </div>
            </div>
        </main>
    {% endblock %}