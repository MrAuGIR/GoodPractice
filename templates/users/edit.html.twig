{% extends "layout.html.twig" %}
{% block stylesheet %}
<link href="/public/style/trix.css" rel="stylesheet" type="text/css">
{% endblock %}
{% block scriptHead %}
<script type="text/javascript" src="/public/js/trix.js"></script>
{% endblock %}
{% block content %}
<main>
    <div class="container">
        {% if errors %}
        <div class="row my-4">
            <div class="col-12 alert alert-danger">
                <ul>
                    {% for error in errors %}
                    <li>{{error}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% endif %}
        <div class="row my-4">
            <div class="col-12">
                <form action="" method="POST">
                    <input type="number" name="id" id="id" value="{{user.getId_user}}" hidden>
                    <div class="col-12 my-5 mb-2">
                        <label for="name">Nom</label>
                        <input type="text" class="form-control" name="name" value="{{user.getName}}">
                    </div>
                    <div class="col-12 my-5 mb-2">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" value="{{user.getEmail}}">
                    </div>
                    <div class="col-12 my-5 mb-2">
                        <label for="category">Role</label>
                        {% set defaultAdmin = (user.getRole() == 'administrateur')? 'default':''  %}
                        <select name="role" id="role">
                            <option value="editeur" >Editeur</option>
                            <option value="administrateur" {{defaultAdmin}}>Administrateur</option>
                        </select>
                    </div>
                    <div class="col-12 col-mb-6 mb-2">
                        <input type="submit" class="btn btn-primary" name="submit" value="Editer">
                    </div>
                    <div class="col-12 col-mb-6 mb-2">
                        <a href="/admin/adminUser" title="annuler">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
{% endblock %}
